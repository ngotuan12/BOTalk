<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TempleteCircleImage1_RelativeLayout_Image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/templeteCircleImage1_ImageView_faceImage"
        android:layout_width="@dimen/list_item_user_image3"
        android:layout_height="@dimen/list_item_user_image3"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_action_user_gray"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/templeteCircleImage1_ImageView_background"
        android:layout_width="@dimen/list_item_user_image3_background"
        android:layout_height="@dimen/list_item_user_image3_background"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_profile_round" />

    <ImageView
        android:id="@+id/templeteCircleImage1_ImageView_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_action_user_gray"
        android:visibility="gone" />

</RelativeLayout>